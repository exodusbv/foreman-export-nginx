upstream <%= app %> {
  <% ports.each do |port| %>
  server localhost:<%= port %> fail_timeout=0;
  <% end %>
}

server {
  access_log <%= log %>/<%= app %>-nginx-access.log combined buffer=0k;
  error_log  <%= log %>/<%= app %>-nginx-error.log;

  listen 80;
  server_name <%= app %>.<%= ENV['BASE_DOMAIN'] %> <%= (ENV['ADDITIONAL_DOMAINS'] || '').split(',').join(' ') %>;

  <% if ENV['USE_SSL'] %>
  listen 443 ssl;

  <% if ENV['SSL_CERT_PATH'] != '' && ENV['SSL_KEY_PATH'] != '' %>
  ssl_certificate <%= ENV['SSL_CERT_PATH'] %>;
  ssl_certificate_key <%= ENV['SSL_KEY_PATH'] %>;
  <% end %>
  
  <% end %>

  root <%= engine.root %>/public;

  try_files $uri/index.html $uri.html $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;

    proxy_pass http://<%= app %>;
  }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root <%= engine.root %>/public;
  }
}
